{
	"name": "@ssg-zero/root",
	"author": {
		"name": "Lukas Rosenfeldt"
	},
	"description": "One static site generator, zero dependencies.*",
	"engines": {
		"node": ">=21"
	},
	"keywords": [
		"ssg",
		"html"
	],
	"license": "MIT",
	"main": "./dist/main.js",
	"scripts": {
		"compile": "tsc --build",
		"compile:watch": "tsc --build --watch",
		"format": "prettier --check --no-error-on-unmatched-pattern './{ssg-zero,site,configure}/**/*.{ts,json,js,md,css}'",
		"format:write": "prettier --write --no-error-on-unmatched-pattern './{ssg-zero,site,configure}/**/*.{ts,json,js,md,css}'"
	},
	"type": "module",
	"version": "0.6.1",
	"workspaces": [
		"ssg-zero",
		"site"
	],
	"devDependencies": {
		"@types/node": "^20.11.29",
		"prettier": "^3.2.5",
		"typescript": "^5.4.2"
	}
}
